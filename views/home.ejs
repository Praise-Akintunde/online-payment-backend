<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Homepage</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

  <main class="main">

    <!-- Reminder Section -->
    <section class="reminder">
      <h2>Reminders</h2>
      <ul>
        <% reminders.forEach(reminder => { %>
          <li><%= reminder.text %> - <%= reminder.date %></li>
        <% }) %>
      </ul>
    </section>

    <!-- Card Carousel Section -->
    <section class="carousel">
      <div class="card-container">
        <% cards.forEach(card => { %>
          <div class="card">
            <h3><%= card.name %></h3>
            <p>Balance: <%= card.balance %></p>
            <p>Number: **** **** **** <%= card.last4 %></p>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Transaction History Section -->
    <section class="transactions-history">
      <h2>Transaction History</h2>
      <ul>
        <% transactions.forEach(transaction => { %>
          <li>
            <p><strong><%= transaction.title %></strong></p>
            <p><%= transaction.date %> - â‚¦<%= transaction.amount %></p>
          </li>
        <% }) %>
      </ul>
    </section>

    <!-- Services Section  -->
    <section class="services">
      <h2>Our Services</h2>
      <div class="service-list">
        <div class="service">
          <img src="/img/transfer.png" alt="Transfer" />
          <p>Transfer</p>
        </div>
        <div class="service">
          <img src="/img/deposit.png" alt="Deposit" />
          <p>Deposit</p>
        </div>
        <div class="service">
          <img src="/img/airtime.png" alt="Airtime" />
          <p>Airtime</p>
        </div>
      </div>
    </section>

  </main>

</body>
</html>
